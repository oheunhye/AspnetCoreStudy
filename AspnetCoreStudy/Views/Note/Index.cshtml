
<table class="table table-bordered">
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                    <td>@note.No</td>
                    <td>
                        <a asp-controller="Note" asp-action="Detail" asp-route-NoteNo="@note.No">@note.Title</a>
                    </td>
                    <td>@note.UserNo</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-info" asp-controller="Note" asp-action="Add">작성하기</a>